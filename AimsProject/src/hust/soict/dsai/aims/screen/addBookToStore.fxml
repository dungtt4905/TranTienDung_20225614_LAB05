<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Options">
                            <items>
                                <Menu mnemonicParsing="false" text="Update Store">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="Add Book" />
                                        <MenuItem mnemonicParsing="false" onAction="#addCDToStore" text="Add CD" />
                                        <MenuItem mnemonicParsing="false" onAction="#addDVDToStore" text="Add DVD" />
                                    </items>
                                </Menu>
                                <MenuItem mnemonicParsing="false" onAction="#viewStore" text="View Store" />
                                <MenuItem mnemonicParsing="false" onAction="#viewCart" text="View Cart" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <Label text="ADD BOOK TO STORE" textFill="AQUA">
                    <font>
                        <Font size="50.0" />
                    </font>
                    <padding>
                        <Insets left="10.0" />
                    </padding>
                </Label>
            </children>
        </VBox>
    </top>
    <center>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <children>
                                        <Label text="Title:">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <children>
                                        <Label text="Category:">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <children>
                                        <Label text="Authors:">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <children>
                                        <Label text="Length (pages):">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <children>
                                        <Label text="Cost ($):">
                                            <padding>
                                                <Insets left="10.0" />
                                            </padding>
                                            <font>
                                                <Font size="24.0" />
                                            </font>
                                        </Label>
                                    </children>
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                </HBox>
                            </children>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </VBox>
                        <VBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                    <children>
                                        <TextField fx:id="tfTitle" prefWidth="250.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                    <children>
                                        <TextField fx:id="tfCategory" prefWidth="250.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                    <children>
                                        <TextField fx:id="tfAuthors" editable="false" prefWidth="200.0" />
                                        <Button mnemonicParsing="false" onAction="#addAuthorBtnPressed" text="Add" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                    <children>
                                        <TextField fx:id="tfNumPages" prefWidth="250.0" />
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER_LEFT" prefHeight="100.0" spacing="10.0">
                                    <padding>
                                        <Insets left="10.0" />
                                    </padding>
                                    <children>
                                        <TextField fx:id="tfCost" prefWidth="250.0" />
                                    </children>
                                </HBox>
                            </children>
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </VBox>
                    </children>
                </HBox>
                <VBox alignment="CENTER_RIGHT" spacing="10.0">
                    <padding>
                        <Insets left="10.0" right="10.0" />
                    </padding>
                    <children>
                        <Button mnemonicParsing="false" onAction="#addBtnPressed" text="Add">
                            <font>
                                <Font size="30.0" />
                            </font></Button>
                    </children>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
